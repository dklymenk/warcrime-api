// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ReportStatus {
  UPLOADED
  ACCEPTED
  REJECTED
}

model Report {
  id          String       @id
  description String
  photo       String
  userId      String
  status      ReportStatus
  latlong     String?
}
